{
  "name": "sepilot-wiki",
  "version": "0.1.0",
  "description": "AI 에이전트 기반 GitHub Wiki 자동화 시스템",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build:wiki": "node scripts/build-wiki-data.js",
    "build:search": "node scripts/build-search-index.js",
    "sync:issues": "node scripts/sync-issues.js",
    "build": "npm run build:wiki && npm run build:search && vite build",
    "preview": "vite preview",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky install"
  },
  "dependencies": {
    "@cp949/react-wordcloud": "^1.0.1",
    "@tanstack/react-query": "^5.0.0",
    "@types/dompurify": "^3.0.5",
    "clsx": "^2.1.0",
    "date-fns": "^3.0.0",
    "dompurify": "^3.3.0",
    "fuse.js": "^7.1.0",
    "lucide-react": "^0.555.0",
    "mermaid": "^11.12.2",
    "plotly.js": "^3.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "react-plotly.js": "^2.6.0",
    "react-router-dom": "^7.10.1",
    "react-syntax-highlighter": "^16.1.0",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/plotly.js": "^3.0.8",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/react-plotly.js": "^2.6.3",
    "@types/react-syntax-highlighter": "^15.5.0",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.49.0",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.0",
    "globals": "^16.5.0",
    "husky": "^8.0.0",
    "jsdom": "^27.2.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.48.1",
    "vite": "^7.2.6",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "SEE LICENSE IN LICENSE"
}
